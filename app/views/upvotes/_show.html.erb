<% if current_user.voted_for?(article) %>
  <%= link_to upvote_path(current_user.vote_for(article)), remote: true,
    method: :delete, class: 'card-upvote' do %>
  <span class="product-arrow-green"></span>
  <div class="card-count-green">
    <%= article.upvotes.count %>
  </div>
  <% end %>

<% else %>
  <%= link_to upvotes_path(article_id: article.id), remote: true, method: :post,
    class: 'card-upvote' do %>
    <span class="product-arrow"></span>
    <div class="card-count">
      <%= article.upvotes.count %>
    </div>
  <% end %>
<% end %>

<% content_for :title, "- How does this work?" %>

<ul class="button-tags-onboarding-container smaller-tags-container text-center
  nav nav-tabs" id="navbar-scrollspy" role="tablist" data-target="#onboarding-scrollspied">
  <li role="tablist" class="active">
    <%= link_to '#onboarding_text_1', 'aria-controls': "onboarding_text_1",
    'arial-label': "onboarding_text_1", class: "green-credits nav-link" do %>
      Bienvenue
    <% end %>
  </li>
  <li role="tablist">
    <%= link_to '#onboarding_text_2', 'aria-controls': "onboarding_text_2",
    'arial-label': "onboarding_text_2", class: "green-credits nav-link" do %>
      Nos attentes
    <% end %>
  </li>
  <li role="tablist">
    <%= link_to '#onboarding_text_3', 'aria-controls': "onboarding_text_3",
    'arial-label': "onboarding_text_3" , class: "green-credits nav-link" do %>
      Nos actions
    <% end %>
  </li>
  <%= render 'shared/credits' %>
</ul>
<%= form_tag onboarding_path, method: :post, class: "onboarding-container" do %>
  <div class="tab-content cards-container onboarding-container summernote"
    id="onboarding-scrollspied" data-spy="scroll" data-offset="0">

      <%= render partial: "onboarding_text" %>
  </div>

  <%= buttons_edit_onboarding(current_user) %>

  <%= hidden_field_tag(:onboarding_page) %>
  <%= submit_tag 'Save', class: 'btn btn-primary hidden', id: "save" %>
<% end %>



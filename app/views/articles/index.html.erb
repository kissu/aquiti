<%= render partial: "shared/button_tag", locals: { button: 'Add a link' } %>

<!-- products-container is here to make a group of the latest articles -->
<section class="products-container">
  <hr class="latest">
  <% @new_articles.each do |article| %>
    <%= render partial: "articles/card", locals: { article: article } %>
  <% end %>
</section>

<!-- same as above but add js stuff on this container :D -->
<section class="products-container filtr-container infinite-container">
  <hr class="popular">
  <% @sorted_articles.each do |article| %>
    <%= render partial: "articles/card", locals: { article: article } %>
  <% end %>
</section>

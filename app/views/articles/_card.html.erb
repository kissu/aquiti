<section class="card filtered-item <% article.tags.each do |tag| %><%= tag.name.downcase %><% end %>">
  <a class="upvote-details-controls-container" href="<%= article.url %>">
    <object class="upvote-block upvote-<%= article.id %>">
        <%= render 'upvotes/show', article: article %>
    </object>

    <object>
      <div class="card-details">
        <h2><%= article[:title] %></h2>
        <p><%= article[:description] %></p>
      </div>
    </object>

    <object class="card-controls">
      <div class="btn-share-block">
        <%= button_featured(article) %>
        <%= button_edit(article) %>
        <%= button_destroy(article) %>
        <%= button_external_link(article) %>
      </div>
    </object>

  </a>
</section>

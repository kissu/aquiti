<section class="card filtered-item <% article.tags.each do |tag| %><%= tag.name.downcase %> <% end %>" data-category="<%= article.tags.first.name.downcase %>">
  <div class="upvote-block" id="upvote-<%= article.id %>">
    <%= render 'upvotes/show', article: article %>
  </div>

  <%= link_to article.url, target: "_blank" do %>
    <object>
      <div class="card-details">
        <h2><%= article[:title] %></h2>
        <p><%= article[:description] %></p>
      </div>
    </object>
  <% end %>

  <div class="card-controls">
    <%= button_featured(article) %>
    <%= button_edit(article) %>
    <%= button_destroy(article) %>
    <%= button_external_link(article) %>
  </div>

</section>

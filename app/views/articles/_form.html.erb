<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <div class="form-model">
        <h1 class="text-center"><%= action %></h1>

        <%= simple_form_for @article, class: "input-group text-center" do |f| %>

          <% if @article.errors.any? %>
              <div id="error_explanation" class="alert alert-danger" >
                <ul>
                <% @article.errors.full_messages.each do |message| %>
                  <li ><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row">
            <div class="col-xs-12 col-md-6">
              <%= f.input :title %>
              </div>
            <div class="col-xs-12 col-md-6">
              <%= f.input :url %>
            </div>
          </div>
          <%= f.input :description, as: :text, input_html: { id: 'areaDescription'} %>
          <div class='text-right' id='charsCounted'></div>


          <div class="form-group">
            <input type="hidden" name="article[tag_ids][]" value="">

            <div class="tag-choices">
              <% Tag.all.each do |tag| %>
                <input class="hidden" type="checkbox" value="<%= tag.id %>"
                  name="article[tag_ids][]" id="article_tag_ids_<%= tag.id %>">
                <label class="tag-choice col-xs-12 col-sm-6 col-lg-3"
                  for="article_tag_ids_<%= tag.id %>">
                  <%= tag.name %>
                </label>
              <% end %>
            </div>
          </div>
          <%= f.submit t('.article'), class: "btn btn-success" %>
        <% end %>

      </div>
    </div>
  </div>
</div>

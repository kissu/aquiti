<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for @article do |f| %>
        <%= f.input :title, label: 'Titre' %>
        <%= f.input :description, as: :text, :maxlength => 140 %>
        <%= f.input :url, label: "Lien de l'article" %>
        <%= f.association :tags, as: :radio_buttons, collection_select: :selected %>
        <%= f.submit "Enregister", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>

<div class="navbar-wagon">
  <!-- Left Part (logo) -->
  <div id="navbar-wagon-left">
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "logo.svg" %>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <!-- Middle Part -->
    <nav id="navbar-wagon-middle">
      <%= link_to_if(current_page?(root_path ) || current_page?(articles_path),
          "KNOWLEDGE", articles_path, html_option = {class:"section active"}) do
        link_to "KNOWLEDGE", articles_path, class:"section" # << else
      end %>
      <%= link_to_if(current_page?(contacts_path), "NETWORK", contacts_path,
        html_option = {class:"section active"}) { link_to "NETWORK", contacts_path,
        class:"section" } %>
    </nav>
  <% end %>

  <!-- Right Part -->
  <% if user_signed_in? %>
    <div id="navbar-wagon-right">

      <!-- Links when logged in -->
        <div class="dropdown">
          <%= send_reporting(current_user) %>
          <%= button_new_invitation(current_user) %>
        </div>

      <div class="dropdown">
        <%= link_to "\u25bc", '#', class: "dropdown-toggle",
          id:"navbar-wagon-menu", "data-toggle" => "dropdown" %>

        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to root_path(current_user) do %>
              <i class="fa fa-home"></i> <%= t(".profile", default: "Home") %>
            <% end %>
          </li>
          <li>
            <%= link_to unboarding_path do %>
              <i class="fa fa-user"></i><%= t(".profile", default: "Unboarding") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i><%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>

    <% end %>
  </div>


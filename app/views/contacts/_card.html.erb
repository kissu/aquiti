<section class="product filtr-item vertical-card sliced <% contact.tags.each do |tag| %><%= tag.name.downcase %><% end %>">
  <h2><%= contact.title %></h2>
  <p><%= contact.description %></p>
  <%= ask_for_contact(contact) %>
  <div class="product-controls" id="icon">
    <%= button_edit_contact(contact) %>
    <%= button_destroy_contact(contact) %>
    <%= button_new_contact %>
  </div>
</section>
